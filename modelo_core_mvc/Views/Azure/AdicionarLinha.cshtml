@model modelo_core_mvc.Models.ListModel

<h1>Adicionar</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AdicionarLinha">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="coluna1" class="control-label"></label>
                <input asp-for="coluna1" class="form-control" />
                <span asp-validation-for="coluna1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="coluna2" class="control-label"></label>
                <input asp-for="coluna2" class="form-control" />
                <span asp-validation-for="coluna2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-sucesso mr-1" />
                <a asp-action="Index" class="btn btn-cancelar mr-1">Cancelar</a>
            </div>
        </form>
    </div>
</div>

