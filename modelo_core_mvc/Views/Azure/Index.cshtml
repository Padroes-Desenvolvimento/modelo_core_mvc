@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@using modelo_core_mvc.Models;
@model IEnumerable<ListModel>

@{
    ViewData["Title"] = "Exemplo de busca de uma Lista SharePoint pelo nome da lista e do site";
}

<h1>Lista</h1>

<p>
    <a asp-action="AdicionarLinha" class="btn btn-regular mr-1">+ Adicionar item</a>
</p>
<table class="table">
    
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.coluna1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.coluna2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.coluna3)
            </th>
            <th>Operação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.coluna1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.coluna2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.coluna3)
                </td>
                <td>
                    <a asp-action="AlterarLinha" class="btn btn-sucesso mr-1">Alterar</a> |
                    <a asp-action="ExcluirLinha" class="btn btn-outline-danger mr-1">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>______________________________________________</p>

<h2>Informações do Graph</h2>
    <ul>
        <li>TenantId: @Configuration["AzureAd:TenantId"]</li>
        <li>ClientId: @Configuration["AzureAd:ClientId"]</li>
        <li>CallApi:  @Configuration["CallApi:MicrosoftGraph"]</li>
    </ul>
    <p>______________________________________________</p>
