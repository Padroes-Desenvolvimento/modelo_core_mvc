@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@using modelo_core_mvc.Models;
@model IEnumerable<ListModel>

<h1>@ViewData["Message"]</h1>
<div aria-label="breadcrumb" role="link">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page"><a asp-area="" asp-controller="Azure" asp-action="MSGraphApplication">MSGraph - Application</a></li>
    </ol>
</div>

<section>
    <h2>Informações do Graph</h2>
    <ul>
        <li>TenantId: @Configuration["AzureAd:TenantId"]</li>
        <li>ClientId: @Configuration["AzureAd:ClientId"]</li>
        <li>CallApi: @Configuration["CallApi:MicrosoftGraph"]</li>
    </ul>
    <p>______________________________________________</p>

    <h2>Sites acessíveis por esse registro de aplicação</h2>
    <p>@ViewData["mensagem"]</p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Display name
                </th>
                <th>
                    Outra informação
                </th>
                <th>Operação</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.coluna1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.coluna2)
                    </td>
                </tr>
            }
        </tbody>
    </table>

</section>
